<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameFragments.GameFragment">

    <!-- Example UI Elements -->
    <Button
        android:id="@+id/cowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/churchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Church"
        app:layout_constraintTop_toBottomOf="@id/cowButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/waterTowerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Tower"
        app:layout_constraintTop_toBottomOf="@id/churchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/whiteFenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="White Fence"
        app:layout_constraintTop_toBottomOf="@id/waterTowerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
