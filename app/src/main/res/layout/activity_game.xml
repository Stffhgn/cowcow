<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GameActivity">

    <!-- Main Content Layout inside ScrollView for better handling on smaller screens -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/background_portrait">

            <!-- Timers and Points at the Top -->
            <!-- Scavenger Hunt Item TextView -->
            <TextView
                android:id="@+id/scavengerHuntItemTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find this item: "
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Countdown Timer -->
            <TextView
                android:id="@+id/countdownTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time left: 00:00"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/scavengerHuntItemTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Team Points TextView -->
            <TextView
                android:id="@+id/teamScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Points: 0"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/countdownTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Player's Total Score TextView -->
            <TextView
                android:id="@+id/playerScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Total Score: 0"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/teamScoreTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Penalty Indicator -->
            <TextView
                android:id="@+id/penaltyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penalty: None"
                android:textColor="@android:color/holo_red_light"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/playerScoreTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Cow, Church, Water Tower, and White Fence buttons grouped together in the middle -->
            <LinearLayout
                android:id="@+id/gameButtonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/penaltyText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/cowButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Cow"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cow"/>

                <ImageButton
                    android:id="@+id/churchButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Church"
                    android:scaleType="fitCenter"
                    android:src="@drawable/church"/>

                <ImageButton
                    android:id="@+id/waterTowerButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Water Tower"
                    android:scaleType="fitCenter"
                    android:src="@drawable/watertower"/>

                <ImageButton
                    android:id="@+id/whiteFenceButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="White Fence"
                    android:scaleType="fitCenter"
                    android:src="@drawable/whitefence"/>
            </LinearLayout>

            <!-- Buttons grouped at the bottom of the screen -->
            <LinearLayout
                android:id="@+id/bottomButtonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/gameButtonsLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Who is Playing Button -->
                <Button
                    android:id="@+id/playerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who is Playing"/>

                <!-- More Options Button -->
                <Button
                    android:id="@+id/moreOptionsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Options"
                    android:layout_marginTop="8dp"/>

                <!-- Start Scavenger Hunt Button -->
                <Button
                    android:id="@+id/startScavengerHuntButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Scavenger Hunt"
                    android:layout_marginTop="8dp"/>

                <!-- Reset Button -->
                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Objects"
                    android:layout_marginTop="8dp"/>

                <!-- Back Button -->
                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Right-side Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/purple_200"
        android:fitsSystemWindows="true">

        <!-- Drawer Header (Optional) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/drawerHeaderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Players"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- RecyclerView for Players -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/drawerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"/>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
