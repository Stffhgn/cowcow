<?xml version="1.0" encoding="utf-8"?>
<!-- Use ScrollView to handle smaller screens -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Player Name (EditText) -->
        <EditText
            android:id="@+id/playerNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Player Name"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:layout_marginBottom="20dp" />

        <!-- Team Status -->
        <TextView
            android:id="@+id/teamStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Status: Not on Team"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- Player Score -->
        <TextView
            android:id="@+id/playerScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Score: 0"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- Player Statistics (Grid Layout for different categories) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginBottom="20dp">

            <!-- Cow Stat -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cows Called: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cowStatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp" />

            <!-- Church Stat -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Churches Called: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/churchStatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp" />

            <!-- Water Tower Stat -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Towers Called: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/waterTowerStatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp" />

            <!-- Add other data points here if needed -->
        </GridLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/savePlayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- Delete Player Button -->
        <Button
            android:id="@+id/deletePlayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Player"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="20dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
