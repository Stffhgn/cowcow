<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header Text for Team Management -->
    <TextView
        android:id="@+id/teamManagementHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Management"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Players on Team List Header -->
    <TextView
        android:id="@+id/onTeamHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Players on Team"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/teamManagementHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView for Players on Team -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/onTeamRecyclerView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/onTeamHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Players not on Team List Header -->
    <TextView
        android:id="@+id/notOnTeamHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Players Not on Team"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/onTeamRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView for Players not on Team -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notOnTeamRecyclerView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/notOnTeamHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Empty State TextView (for when no players are available) -->
    <TextView
        android:id="@+id/availablePlayersEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No players available"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/notOnTeamRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <!-- Save Team and Reset Team Buttons placed side by side -->
    <Button
        android:id="@+id/saveTeamButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Team"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/resetTeamButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/resetTeamButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset Team"
        app:layout_constraintStart_toEndOf="@id/saveTeamButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.5"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
