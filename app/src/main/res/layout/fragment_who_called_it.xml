<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameFragments.WhoCalledItFragment">

    <!-- Player Name TextView -->
    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Player Total Score -->
    <TextView
        android:id="@+id/playerTotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Score: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/playerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Cow Stats -->
    <TextView
        android:id="@+id/cowStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cows: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/playerTotalScore"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <!-- Church Stats -->
    <TextView
        android:id="@+id/churchStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Churches: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/playerTotalScore"
        app:layout_constraintStart_toEndOf="@id/cowStat"
        android:layout_marginStart="32dp"/>

    <!-- Water Tower Stats -->
    <TextView
        android:id="@+id/waterTowerStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Towers: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/playerTotalScore"
        app:layout_constraintStart_toEndOf="@id/churchStat"
        android:layout_marginStart="32dp"/>

    <!-- Error message -->
    <TextView
        android:id="@+id/errorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/waterTowerStat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
