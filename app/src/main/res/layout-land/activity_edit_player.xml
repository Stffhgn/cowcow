<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_landscape"
    android:padding="16dp">

<LinearLayout
android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <!-- Player Info Section -->
<LinearLayout
android:orientation="vertical"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:gravity="center_horizontal">

<!-- Player Name (EditText) -->
<EditText
    android:id="@+id/playerNameEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter Player Name"
    android:textSize="20sp"
    android:fontFamily="@font/notosans"
    android:textColor="#000000"
    android:padding="12dp"
    android:focusable="false"
    android:clickable="true"
    android:background="@null"
    android:elevation="2dp"
    android:layout_marginBottom="24dp" />

<!-- Team Status -->
<TextView
    android:id="@+id/teamStatusTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Team Status: Not on Team"
    android:textSize="18sp"
    android:textColor="#32CD32"
    android:fontFamily="@font/notosans"
    android:layout_marginBottom="20dp" />

<!-- Player Score -->
<TextView
    android:id="@+id/playerScoreTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Total Score: 0"
    android:textSize="18sp"
    android:textColor="#FFD700"
    android:fontFamily="@font/notosans"
    android:layout_marginBottom="20dp" />
</LinearLayout>

    <!-- Player Stats Section -->
<LinearLayout
android:orientation="vertical"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:gravity="center_horizontal">

<!-- Player Statistics (Grid Layout for different categories) -->
<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:layout_marginBottom="20dp"
    android:padding="12dp"
    android:background="#E0E0E0"
    android:elevation="3dp"
    android:layout_margin="16dp">

    <!-- Cow Stat -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cows Called:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/notosans" />

    <TextView
        android:id="@+id/cowStatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/notosans" />

    <!-- Church Stat -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Churches Called:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/notosans" />

    <TextView
        android:id="@+id/churchStatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/notosans" />

    <!-- Water Tower Stat -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Towers Called:"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/notosans" />

    <TextView
        android:id="@+id/waterTowerStatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/notosans" />
</GridLayout>

<!-- Save Button -->
<Button
    android:id="@+id/savePlayerButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save"
    android:textSize="18sp"
    android:fontFamily="@font/notosans"
    android:textColor="#FFFFFF"
    android:background="@color/teal_700"
    android:padding="12dp"
    android:layout_marginBottom="20dp" />

<!-- Delete Player Button -->
<Button
    android:id="@+id/deletePlayerButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Delete Player"
    android:textSize="18sp"
    android:fontFamily="@font/notosans"
    android:textColor="@android:color/holo_red_dark"
    android:background="@android:color/white"
    android:padding="12dp"
    android:layout_marginBottom="20dp" />

<!-- Back Button -->
<Button
    android:id="@+id/backButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Back"
    android:textSize="18sp"
    android:fontFamily="@font/notosans"
    android:textColor="#FFFFFF"
    android:background="@color/teal_700"
    android:padding="12dp"
    android:layout_marginBottom="20dp" />
</LinearLayout>
    </LinearLayout>

    </ScrollView>
